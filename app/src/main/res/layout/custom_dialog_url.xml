<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="180dp"
    android:background="@drawable/border_home_card"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/url_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        android:background="@color/pure"
        android:ems="10"
        android:hint="URL 제목을 입력하세요."
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:theme="@style/AppTheme"/>

    <View style="@style/Divider"/>

    <EditText
        android:id="@+id/url_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@color/pure"
        android:ems="10"
        android:hint="URL을 입력하세요."
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:theme="@style/AppTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/url_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_radius_gray"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/url_yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_radius_purple"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>